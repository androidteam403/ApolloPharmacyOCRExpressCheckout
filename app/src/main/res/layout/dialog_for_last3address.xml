<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentLayoutForTimer">


        <FrameLayout
            android:id="@+id/parent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/one_hundred_dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="@dimen/one_hundred_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:background="@drawable/custom_dialog_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_weight="0.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="Select your delivery address"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimen20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_weight="0.1"
                        android:id="@+id/close_address_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/close_whitee" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginRight="@dimen/margin_5dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/six_dp"
                    android:background="@drawable/custom_dialog_background"
                    android:padding="@dimen/margin_10dp"
                    tools:ignore="Orientation">

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/last_3addressRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10dp" />

                    <TextView

                        android:id="@+id/nolistfound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_bold"
                        android:text="No List Found"
                        android:textAlignment="center"
                        android:textColor="@color/RED"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/dialogButtonAddAddress"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:background="@drawable/scan_btn_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Add New Address"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialogButtonRecallAddress"
                    android:layout_width="@dimen/one_hundred_fifty_dp"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:background="@drawable/cancel_btn_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recall Address"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

