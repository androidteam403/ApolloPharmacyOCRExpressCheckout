<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/two_hundred_fifty_dp"
    android:layout_height="@dimen/one_hundred_ninty_dp"
    android:layout_marginRight="@dimen/ten_dp"
    android:layout_marginLeft="@dimen/ten_dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_ninty_dp"
        android:background="@drawable/review_address_home_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/dialog_red_color"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingStart="@dimen/five_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_address_image"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_edit_pay" />

                <ImageView
                    android:id="@+id/delete_address_image"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/icon_delete" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/User_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/User_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp" />

        <TextView
            android:id="@+id/user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/thirteen_sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <TextView
                android:id="@+id/select_address_text"
                android:layout_width="@dimen/one_hundred_ten_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/review_order_button_bg"
                android:gravity="center"
                android:text="@string/label_select"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>