<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/ten_dp"
    android:layout_marginStart="@dimen/five_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp"
        android:layout_marginEnd="@dimen/seven_dp"
        android:layout_marginTop="@dimen/seven_dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="@dimen/forty_five_dp"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/two_dp"
        android:layout_marginTop="@dimen/one_dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_close" />
</RelativeLayout>