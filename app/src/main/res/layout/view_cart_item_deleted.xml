<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:background="@null"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            android:contentDescription="@string/app_name"
            android:src="@drawable/samplemedicines" />

        <TextView
            android:id="@+id/productname_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@null"
            android:lines="2"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fifteen_sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offerpricetextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fifteen_sp" />

            <TextView
                android:id="@+id/mrppricetextview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="@dimen/thirteen_sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/quantity_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.11"
            android:background="@null"
            android:gravity="center|end"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fifteen_sp" />

        <TextView
            android:id="@+id/totalpricetextview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.14"
            android:background="@null"
            android:gravity="end|center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fifteen_sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/addagain_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.18"
            android:background="@null"
            android:text="@string/label_add_again"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/sixteen_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/cart_item_view_divider_color"/>
</LinearLayout>