<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transperent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/four_hundred_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:background="@drawable/custom_dialog_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/thirty_dp"
                        android:gravity="center"
                        android:text="@string/label_notify_mobile_number"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/twenty_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mobile_no_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/dialog_yellow_color"
                        android:textSize="@dimen/twenty_five_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/label_once_your_prescription"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/twenty_sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/twenty_dp">

                            <LinearLayout
                                android:layout_width="@dimen/two_hundred_dp"
                                android:layout_height="@dimen/one_hundred_fifty_dp"
                                android:background="@drawable/mobile_no_prescription_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/five_dp"
                                    android:text="@string/label_you_will_recieve_a_call"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/fifteen_sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="@dimen/fifty_dp"
                            android:layout_gravity="center|top"
                            android:background="@color/dialog_dark_blue"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/fifty_dp"
                                android:layout_height="@dimen/fifty_dp"
                                android:background="@drawable/icon_apollo_customer"
                                android:contentDescription="@string/app_name" />
                        </LinearLayout>

                    </FrameLayout>

                    <View
                        android:layout_width="@dimen/ten_dp"
                        android:layout_height="@dimen/two_dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="@dimen/thirty_eight_dp"
                        android:layout_height="@dimen/thirty_eight_dp"
                        android:layout_gravity="center"
                        android:background="@drawable/or_mobile_no_prescription_bg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/label_or"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/thirteen_sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/ten_dp"
                        android:layout_height="@dimen/two_dp"
                        android:layout_gravity="center"
                        android:background="@color/colorWhite" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/twenty_dp">

                            <LinearLayout
                                android:layout_width="@dimen/two_hundred_dp"
                                android:layout_height="@dimen/one_hundred_fifty_dp"
                                android:background="@drawable/mobile_no_prescription_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/five_dp"
                                    android:text="@string/label_you_can_go_to_any_nearest"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/fifteen_sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="@dimen/fifty_dp"
                            android:layout_gravity="center|top"
                            android:background="@color/dialog_dark_blue"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/fifty_dp"
                                android:layout_height="@dimen/fifty_dp"
                                android:background="@drawable/icon_apollo_kiosk"
                                android:contentDescription="@string/app_name" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ok_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/scan_btn_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="@string/label_ok"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/twenty_five_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/one_hundred_dp"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_popup_contact"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/close_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/twenty_five_dp"
            android:layout_marginBottom="@dimen/thirty_dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_cross"
            android:visibility="visible" />
    </FrameLayout>
</LinearLayout>