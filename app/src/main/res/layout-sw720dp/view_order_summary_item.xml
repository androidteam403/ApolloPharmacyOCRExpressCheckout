<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center"
            android:layout_weight="0.05"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_information" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/productname_textview"
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_gravity="center"
            android:layout_weight="0.37"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxLines="2"
            android:text="Dolonex 1M 20mg Injection1ml"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/thirteen_sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01" />

        <TextView
            android:id="@+id/offerpricetextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/twenty_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/totalpricetextview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:gravity="center"
            android:paddingStart="@dimen/thirty_dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>