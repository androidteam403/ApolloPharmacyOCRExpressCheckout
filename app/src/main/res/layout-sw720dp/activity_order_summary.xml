<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_theme_bg">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_marginStart="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/thirty_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:contentDescription="@string/app_name"
                android:rotation="90"
                android:src="@drawable/back_arrow_click_effect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/seventy_dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/forty_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:gravity="center"
                        android:text="@string/label_order_review"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/thirty_five_sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:background="@color/color_order_summary_green"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="@dimen/thirty_five_dp"
                                android:layout_height="@dimen/sixty_dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/twenty_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginBottom="@dimen/five_dp"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher_apollo"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/details_txt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/thirty_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:layout_marginBottom="@dimen/five_dp"
                                android:layout_toEndOf="@+id/image"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/five_dp"
                                            android:text="@string/label_summary_delivery_type"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/fourteen_sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/type_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/fifteen_sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/five_dp"
                                            android:text="@string/label_summary_name"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/fourteen_sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/name_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/fifteen_sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/five_dp"
                                            android:text="@string/label_summary_mobile"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/fourteen_sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/mobile_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/thirteen_sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.6"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/pincode_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/five_dp"
                                            android:text="@string/label_summary_pincode"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/fourteen_sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/pincode_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/fifteen_sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/five_dp"
                                            android:text="@string/label_summary_address"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/fourteen_sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/address_txt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="4"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/thirteen_sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty_dp"
                        android:background="@color/unselected_menu_color"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.36"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/twenty_dp"
                            android:text="@string/Name_of_the_Medicine"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="@string/label_price"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="@string/Quantity"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.24"
                            android:gravity="center"
                            android:text="@string/label_total_price"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/fifteen_sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_cart_recyclerView"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="@dimen/one_hundred_sixty_dp"
                        android:divider="@null" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ten_dp"
                        android:background="@color/colorWhite" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_hundred_forty_dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/thirty_dp"
                                android:background="@color/colorWhite">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorWhite"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/twenty_dp"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="0.4"
                                                android:orientation="vertical"></LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.6"
                                                android:orientation="vertical">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/ten_dp"
                                                    android:orientation="horizontal"
                                                    android:weightSum="0.5">

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:text="@string/label_cart_sub_total"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/subtotal_textview"
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="0.2"
                                                        android:gravity="center"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/ten_dp"
                                                    android:orientation="horizontal"
                                                    android:weightSum="0.5">

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:paddingStart="@dimen/ten_dp"
                                                        android:text="@string/label_shipping"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:paddingStart="@dimen/ten_dp"
                                                        android:text="FREE"
                                                        android:textColor="#1ac9f6"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="0.2"
                                                        android:gravity="center"
                                                        android:paddingStart="@dimen/ten_dp"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/ten_dp"
                                                    android:orientation="horizontal"
                                                    android:visibility="gone"
                                                    android:weightSum="0.5">

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:text="@string/label_redeem_points"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/redeem_points_value"
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:textColor="#1ac9f6"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="0.2"
                                                        android:gravity="center"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="1dp"
                                                    android:layout_marginTop="@dimen/ten_dp"
                                                    android:orientation="horizontal"
                                                    android:weightSum="0.5">

                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="1dp"
                                                        android:layout_weight="0.4"
                                                        android:background="@color/color_order_summary_grey" />

                                                    <View
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content" />
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/ten_dp"
                                                    android:orientation="horizontal"
                                                    android:weightSum="0.5">

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:text="@string/label_you_pay"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:id="@+id/totalpayable_textview"
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="end"
                                                        android:layout_weight="0.15"
                                                        android:gravity="end"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />

                                                    <TextView
                                                        android:layout_width="0dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="0.2"
                                                        android:gravity="center"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/fifteen_sp"
                                                        android:textStyle="bold" />
                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@color/color_review_order"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/image_pay"
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/thirty_dp"
                                            android:contentDescription="@string/app_name"
                                            android:src="@drawable/icon_payment_option" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/ten_dp"
                                            android:layout_toEndOf="@+id/image_pay"
                                            android:text="@string/label_select_your_payment_option"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/fifteen_sp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/pay_button_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_marginEnd="@dimen/thirty_dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/one_hundred_dp"
                                    android:layout_height="@dimen/one_hundred_dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/icon_pay" />
                            </LinearLayout>
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/fifty_dp"
            android:layout_marginBottom="@dimen/twenty_dp">

            <include layout="@layout/view_customer_support" />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/networkErrorLayout"
        layout="@layout/layout_network_error" />
</androidx.constraintlayout.widget.ConstraintLayout>