<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <padding android:bottom="@dimen/five_dp"
                android:left="@dimen/five_dp"
                android:right="@dimen/five_dp"
                android:top="@dimen/five_dp" />
            <solid android:color="@color/material_amber_accent_700" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="oval">
            <padding android:bottom="@dimen/five_dp"
                android:left="@dimen/five_dp"
                android:right="@dimen/five_dp"
                android:top="@dimen/five_dp" />
            <stroke android:width="@dimen/two_dp" android:color="@color/colorWhite" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>